<div class="page-header">
  <%= link_to 'New', new_user_path, class: 'btn btn-primary pull-right' %>
  <h1>Listing Users</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td>
          <%= link_to 'Show', user_path(user), title: 'Show', class: 'btn-link' %>
          <%= link_to 'Edit', edit_user_path(user), title: 'Edit', class: 'btn btn-link' %>
          <%= link_to 'Destroy', user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      title: 'Delete',
                      class: 'btn btn-link' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
